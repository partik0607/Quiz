<%- include('partials/header') %>

  <head>
    <link rel="stylesheet" href="/read.css">
    <style>
      .right {
        position: absolute;
        right: 10px;
        top: 150px;
        /* width: 300px; */
        border: 3px solid #73AD21;
        padding: 10px;
        font-size: 12px;
      }
    </style>
    <title>Read complete</title>
  </head>

  <div class="faq-header" >
    <%=quiz.title%>
    <div class="right">
      Quiz link: 
      <input type="text" value="https://take-quiz.onrender.com/quiz:<%-quiz._id%>" style="width: 300px;"  id="myInput">
      
    </div>
  </div>
<div class="faq-content">
  
  <% for(let i in quiz.question){ %>
    <div class="faq-question">
      <input id="q<%-Number(i)+1%>" type="checkbox" class="panel">
      <div class="plus">+</div>
      <label for="q<%-Number(i)+1%>" class="panel-title"><%= (Number(i)+1) +": "+ quiz.question[i].question %></label>
      <div class="panel-content">

        <div class="card-body col-12 col-sm-12 col-md-12 col-lg-6" style="display: inline-block;">
          
          <p style="padding: 10px; background-color: rgb(228, 244, 238); <% if(quiz.question[i].option1[1]) {%>
            background-color: green;
            <% } %>" class="card-text">
              <b>Option 1:</b>
              <%= quiz.question[i].option1[0] %>
          </p>

          <p style=" padding: 10px; background-color: rgb(228, 244, 238); <% if(quiz.question[i].option2[1]) {%>
            background-color: green;
            <% } %>" class="card-text">
                <b>Option 2:</b>
              
                <%= quiz.question[i].option2[0] %>

          </p>
          <p style=" padding: 10px; background-color: rgb(228, 244, 238); <% if(quiz.question[i].option3[1]) {%>
            background-color: green;
            <% } %>" class="card-text">
                <b>Option 3:</b>
                <%= quiz.question[i].option3[0] %>
          </p>
          <p style=" padding: 10px; background-color: rgb(228, 244, 238); <% if(quiz.question[i].option4[1]) {%>
            background-color: green;
            <% } %>"  class="card-text" >
                <b>Option 4:</b>
                <%=  quiz.question[i].option4[0] %>
          </p>
        </div>

        <div class="card-body col-12 col-sm-12 col-md-12 col-lg-5" style="display: inline-block; text-align: center;" >
          
          <p style="padding: 10px; background-color: rgb(120, 170, 187); " class="card-text">
            Average time: <%=  quiz.avg_time[i] %>
          </p>
          <p style="padding: 10px; background-color: rgb(120, 170, 187); " class="card-text">
            Time alloted: <%=  quiz.question[i].timer %></p>
                 
          </p>
          <p style="padding: 10px; background-color: rgb(120, 170, 187); " class="card-text">
            Average Score: <%=  quiz.avg_score[i] %></p>
                           
          </p>
          <p style="padding: 10px; background-color: rgb(120, 170, 187); " class="card-text">
            Score alloted: <%=  quiz.question[i].score %></p>
                     
          </p>

      </div>

      </div>
    </div>
  <%}%>
  
</div>



    <h2>Users data</h2>
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
            <tr>
                <th>S.No</th>
                <th>Name</th>
                <th>Time Taken</th>
                <th>Score Achived</th>
                <th>Details</th>
                
            </tr>
            </thead>
            <tbody>
            
            <%  for(let i in details) { %>
            <tr>
                <td><%-Number(i)+1%></td>
                <td><%- details[i].fullname %></td>
                <td><%- details[i].time%> </td>
                <td><%- details[i].score %></td>
                <td><a href="/details:<%-details[i].submission_id%>">Detail</a></td>

                
            </tr>
            <%}%>
            <tbody>
        </table>
    </div>





          <script>
            function myFunction() {
              /* Get the text field */
              var copyText = document.getElementById("myInput");

              /* Select the text field */
              copyText.select();
              copyText.setSelectionRange(0, 99999); /* For mobile devices */

              /* Copy the text inside the text field */
              navigator.clipboard.writeText(copyText.value);

              /* Alert the copied text */
              alert("Link is copied");
            }
          </script>

